<section id="cart-page" class="bg-white py-16">
  <div class="container mx-auto px-4">
    <h1 class="text-2xl font-semibold mb-4">Shopping Cart</h1>
    <div class="flex flex-col md:flex-row gap-4">
      <div class="md:w-3/4">
        <div class="bg-white rounded-lg shadow-md p-6 mb-4">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr>
                  <th class="text-center md:text-left font-semibold">Product</th>
                  <th class="text-center font-semibold">Price</th>
                  <th class="text-center font-semibold">Quantity</th>
                  <th class="text-center md:text-right font-semibold">Total</th>
                  <th class="text-center md:text-right font-semibold">Actions</th>
                </tr>
              </thead>
              <tbody id="cart-items">
                <% @cart.cart_items.each do |item| %>
                <tr class="pb-4 border-b border-gray-line">
                  <td class="px-1 py-4">
                    <div class="flex items-center flex-col sm:flex-row text-center sm:text-left">
                      <%= image_tag item.product.image_url, class: "h-16 w-16 md:h-24 md:w-24 sm:mr-8 mb-4 sm:mb-0" %>
                      <p class="text-sm md:text-base md:font-semibold"><%= item.product.name %></p>
                    </div>
                  </td>
                  <td class="px-1 py-4 text-center"><%= number_to_currency(item.product.price) %></td>
                  <td class="px-1 py-4 text-center">
                    <div class="flex items-center justify-center">
                      <%= button_to '-', update_item_cart_path(product_id: item.product.id, quantity: item.quantity - 1), method: :patch, class: "cart-decrement border border-primary bg-primary text-white hover:bg-transparent hover:text-primary rounded-full w-10 h-10 flex items-center justify-center" %>
                      <p class="quantity text-center w-8"><%= item.quantity %></p>
                      <%= button_to '+', update_item_cart_path(product_id: item.product.id, quantity: item.quantity + 1), method: :patch, class: "cart-increment border border-primary bg-primary text-white hover:bg-transparent hover:text-primary rounded-full w-10 h-10 flex items-center justify-center" %>
                    </div>
                  </td>
                  <td class="px-1 py-4 text-right"><%= number_to_currency(item.total_price) %></td>
                  <td class="px-1 py-4 text-right">
                    <%= button_to 'Remove', remove_item_cart_path(product_id: item.product.id), method: :delete, class: "bg-primary text-white border border-primary hover:bg-transparent hover:text-primary rounded-full py-2 px-4" %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <div class="px-1 flex flex-col lg:flex-row justify-between items-center mt-10">
              <div class="mt-4 lg:mt-0 flex space-x-2">
                <%= button_to 'Empty Cart', empty_cart_cart_path, method: :delete, class: "bg-primary text-white border border-primary hover:bg-transparent hover:text-primary rounded-full py-2 px-4" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="md:w-1/4">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-lg font-semibold mb-4">Summary</h2>
          <div class="flex justify-between mb-4">
            <p>Subtotal</p>
            <p><%= number_to_currency(@cart.subtotal) %></p>
          </div>
          <div class="flex justify-between mb-4">
            <p>Taxes</p>
            <p><%= number_to_currency(@cart.calculate_taxes) %></p>
          </div>
          <div class="flex flex-col mb-4">
            <% @cart.tax_breakdown.each do |tax_name, amount| %>
              <div class="flex justify-between">
                <p><%= tax_name %></p>
                <p><%= number_to_currency(amount) %></p>
              </div>
            <% end %>
          </div>
          <div class="flex justify-between mb-4 pb-4 border-b border-gray-line">
            <p>Shipping</p>
            <p>$0.00</p>
          </div>
          <div class="flex justify-between mb-2">
            <p class="font-semibold">Total</p>
            <p class="font-semibold"><%= number_to_currency(@cart.total) %></p>
          </div>
          <%= link_to 'Proceed to checkout', new_order_path, class: "bg-primary text-white border hover:border-primary hover:bg-transparent hover:text-primary py-2 px-4 rounded-full mt-4 w-full text-center block" %>
        </div>
      </div>
    </div>
  </div>
</section>
