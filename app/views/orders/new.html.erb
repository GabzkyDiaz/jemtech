<div class="container mx-auto py-8">
  <h2 class="text-2xl font-semibold mb-6">Checkout</h2>
  <%= form_with model: @order, local: true, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :address, class: "block font-semibold" %>
      <%= form.text_field :address, class: "w-full p-2 border rounded" %>
    </div>
    <div>
      <%= form.label :city, class: "block font-semibold" %>
      <%= form.text_field :city, class: "w-full p-2 border rounded" %>
    </div>
    <div>
      <%= form.label :province, class: "block font-semibold" %>
      <%= form.collection_select :province_id, Province.all, :id, :name, {}, class: "w-full p-2 border rounded" %>
    </div>
    <div>
      <%= form.label :zip_code, class: "block font-semibold" %>
      <%= form.text_field :zip_code, class: "w-full p-2 border rounded" %>
    </div>
    <div>
      <%= form.label :country, class: "block font-semibold" %>
      <%= form.text_field :country, class: "w-full p-2 border rounded" %>
    </div>
    <%= form.fields_for :order_items do |item_form| %>
      <%= item_form.hidden_field :product_id %>
      <%= item_form.hidden_field :quantity %>
      <%= item_form.hidden_field :price %>
    <% end %>
    <div>
      <%= form.submit 'Place Order', class: "bg-green-500 text-white p-4 rounded w-full" %>
    </div>
  <% end %>
</div>
