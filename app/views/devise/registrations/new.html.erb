<div class="container mx-auto py-8">
  <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-6">Sign Up or Log In</h2>
    <div class="flex">
      <div class="w-1/2 p-4 border-r border-gray-200">
        <h3 class="text-xl font-semibold mb-4">Log In</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= f.label :email, class: "block mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <div class="mb-4">
            <%= f.label :password, class: "block mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="mb-4">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "inline-block text-sm ml-2" %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in", class: "w-full bg-primary text-white p-2 rounded-lg" %>
          </div>
        <% end %>
      </div>
      <div class="w-1/2 p-4">
        <h3 class="text-xl font-semibold mb-4">Sign Up</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= f.label :first_name, class: "block mb-2" %>
            <%= f.text_field :first_name, autofocus: true, class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <div class="mb-4">
            <%= f.label :last_name, class: "block mb-2" %>
            <%= f.text_field :last_name, class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <div class="mb-4">
            <%= f.label :email, class: "block mb-2" %>
            <%= f.email_field :email, class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <div class="mb-4">
            <%= f.label :password, class: "block mb-2" %>
            <%= f.password_field :password, class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <div class="mb-4">
            <%= f.label :password_confirmation, class: "block mb-2" %>
            <%= f.password_field :password_confirmation, class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <div class="mb-4">
            <%= f.label :address, class: "block mb-2" %>
            <%= f.text_field :address, class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <div class="mb-4">
            <%= f.label :city, class: "block mb-2" %>
            <%= f.text_field :city, class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <div class="mb-4">
            <%= f.label :province_id, "Province", class: "block mb-2" %>
            <%= f.collection_select :province_id, Province.all, :id, :name, {}, {class: "w-full p-2 border border-gray-300 rounded"} %>
          </div>
          <div class="mb-4">
            <%= f.label :zip_code, class: "block mb-2" %>
            <%= f.text_field :zip_code, class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <div class="mb-4">
            <%= f.label :country, class: "block mb-2" %>
            <%= f.select :country, options_for_select(ISO3166::Country.all.map { |country| [country.translations[I18n.locale.to_s] || country.name, country.alpha2] }, selected: resource.country), {}, {class: "w-full p-2 border border-gray-300 rounded"} %>
          </div>
          <div class="mb-4">
            <%= f.label :phone, class: "block mb-2" %>
            <%= f.text_field :phone, class: "w-full p-2 border border-gray-300 rounded" %>
          </div>
          <div class="actions">
            <%= f.submit "Sign up", class: "w-full bg-primary text-white p-2 rounded-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
