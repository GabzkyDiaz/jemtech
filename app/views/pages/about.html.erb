<div class="container mx-auto px-4">
  <section class="bg-white py-10">
    <div class="flex flex-wrap -mx-4 items-center">
      <!-- Image Section -->
      <div class="w-full md:w-1/2 px-4 mb-8 md:mb-0">
        <img src="<%= asset_path('hq.jpg') %>" alt="About Us" class="w-full h-auto object-cover rounded shadow-lg">
      </div>
      <!-- About Information Section -->
      <div class="w-full md:w-1/2 px-4">
        <div class="text-left mb-10">
          <h2 class="text-4xl font-bold text-gray-800 mb-4"><%= @page.title %></h2>
          <p class="text-lg text-gray-600 mb-6"><%= raw @page.content %></p>
        </div>
      </div>
    </div>
  </section>
</div>
