<div class="container mx-auto px-4">
  <div class="flex flex-wrap">
    <div class="w-full lg:w-1/2 px-4">
      <img src="<%= asset_path(@product.image_url) %>" alt="<%= @product.name %>" class="h-64 w-full object-cover">
    </div>
    <div class="w-full lg:w-1/2 px-4">
      <h1 class="text-3xl font-bold mb-4"><%= @product.name %></h1>
      <p class="text-gray-700 mb-4"><%= @product.description %></p>
      <p class="text-green-500 font-semibold text-2xl mb-4"><%= number_to_currency(@product.price) %></p>
      <%= button_to 'Add to Cart', cart_items_path(product_id: @product.id), method: :post, class: 'bg-blue-500 text-white px-4 py-2 rounded' %>
    </div>
  </div>
</div>
